{
  "displayName": "Homebridge LG ThinQ",
  "name": "homebridge-lg-thinq",
  "version": "1.9.0",
  "description": "A Homebridge plugin for controlling/monitoring LG ThinQ device via LG ThinQ platform.",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nVuln/homebridge-lg-thinq.git"
  },
  "bugs": {
    "url": "https://github.com/nVuln/homebridge-lg-thinq/issues"
  },
  "engines": {
    "homebridge": "^1.8.0 || ^2.0.0-beta.0",
    "node": "^18.20.4 || ^20.18.0 || ^22.10.0"
  },
  "main": "dist/index.js",
  "bin": {
    "thinq": "./dist/cli.js"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "lint": "eslint . --max-warnings=0",
    "prepublishOnly": "npm run lint && npm run build",
    "watch": "npm run build && npm link && nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "lg",
    "lg-thinq"
  ],
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@jest/globals": "^29.0.0",
    "@types/aws-iot-device-sdk": "^2.2.8",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.5",
    "@types/node-forge": "^1.3.11",
    "@types/node-persist": "^3.1.8",
    "@types/qs": "^6.9.18",
    "eslint": "^9.21.0",
    "eslint-plugin-jest": "^28.11.0",
    "homebridge": "^2.0.0-beta.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "homepage": "https://github.com/nVuln/homebridge-lg-thinq#readme",
  "author": "nVuln",
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^0.0.19",
    "aws-iot-device-sdk": "^2.2.11",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "commander": "^8.2.0",
    "homebridge-config-ui-x": "^4.50.6",
    "homebridge-lib": "^7.1.4",
    "luxon": "^3.6.0",
    "node-forge": "^1.0.0",
    "node-persist": "^4.0.4",
    "qs": "^6.14.0",
    "uuid": "^11.1.0"
  },
  "funding": [
    {
      "type": "paypal",
      "url": "https://paypal.me/ndhan"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
